    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/main_title_bar">
        android:layout_alignParentTop ="true"
    </include>
    <!--显示头像，记得加入id iv_head -->
