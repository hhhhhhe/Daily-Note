            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/btn_refresh"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


